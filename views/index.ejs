    <script>
        const marquee = document.getElementById('marqueeImgs')
        var loadedPercent = 0
        marqueeRect = marquee.getBoundingClientRect()
        const myInterval = setInterval(() => {
            marqueeStyleLeft = Number(marquee.style.left.slice(0, -2))
            if (marqueeStyleLeft <= -(document.body.offsetWidth)) {
                marquee.style.left = '0px'
                marqueeStyleLeft = 0
            }
            console.log(document.body.offsetWidth)
            marquee.style.left = (marqueeStyleLeft - 1) + 'px'
            // window.scrollTo(0, window.scrollY)
        }, 5)
        const loadInterval = setInterval(() => {
            const loadingBar = document.getElementById('loadingBar')
            loadingBar.style.width = `${loadedPercent}%`
            document.getElementById('loadedPercentage').innerHTML = loadedPercent
            if (document.readyState == 'complete') {
                console.log('done')
                document.getElementById('loadingScreen').style.display = 'none'
                clearInterval(loadInterval)
            } else if (loadedPercent == 99) {
                console.log('wait!')
            } else {
                loadedPercent += 1
            }
        }, 40)
        window.onload = () => {
            document.getElementById('bgOverlay').style.height = document.getElementById('bgLoop').getBoundingClientRect().height + 'px'
        }
        function toggleCollapsed(e) {
            const toCollapse = e.target.parentElement.children[1]
            if (e.target == toCollapse) return;
            const stylesOfElmnt = window.getComputedStyle(toCollapse),
                styleDisplay = stylesOfElmnt.getPropertyValue('display')
            if (styleDisplay == 'none') {
                console.log('hidden!')
                toCollapse.style.display = 'block'
                e.target.style.borderBottomRightRadius = '0px'
                e.target.style.borderBottomLeftRadius = '0px'
                console.log(e.target)
                setTimeout(() => {
                    toCollapse.style.transform = 'scale(1, 1)'
                }, 50)
            } else {
                toCollapse.style.transform = 'scale(1, 0)'
                e.target.style.borderBottomRightRadius = '50px'
                e.target.style.borderBottomLeftRadius = '50px'
                setTimeout(() => {
                    toCollapse.style.display = 'none'
                }, 400)
            }
        }
        
        function handleInputFocus(t) {
            const myLabel = document.getElementById(t)
            myLabel.style.transform = 'translate(-5px, -15px)'
            myLabel.style.fontSize = '0.7em'
        }

        function handleInputBlur(t, e) {
            if (e.target.value.length > 0) return;
            const myLabel = document.getElementById(t)
            myLabel.style.transform = 'translate(0, 0)'
            myLabel.style.fontSize = '1em'
        }
        for (let i = 18; i < 101; i++) {
            const newOption = document.createElement('option')
            newOption.value = i.toString()
            newOption.innerHTML = i.toString()
            document.getElementById('ageSelect').appendChild(newOption)
        }
        function scrollToElement(id) {
            console.log(document.getElementById(id))
            document.getElementById(id).scrollIntoView({behavior: 'smooth'})
        }
    </script>
