<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stock Surgeons - Home</title>
    <style>
        * {box-sizing: border-box;}
        body {
            margin: 0px;
            font-family: sans-serif;
            overflow-x: hidden;
            background-color: black;
        }
        ::-webkit-scrollbar {
            width: 10px;
            background-color: #111;
        }
        ::-webkit-scrollbar-thumb {
            width: 10px;
            background-color: #333;
            border-radius: 50px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background-color: #222;
        }
        .header {
            width: 100vw;
            position: relative;
        }
        .bgvid {
            width: 100vw;
            z-index: -2;
            position: relative;
        }
        .bgOverlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100%;
            z-index: -1;
            background-color: rgba(0, 0, 0, 0.65);
        }
        .nav {
            display: flex;
            justify-content: space-between;
            color: white;
            font-size: 20px;
            font-weight: bold;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
        }
        .logoText {
            padding: 30px;
        }
        .navItems {
            display: flex;
        }
        .navItem {
            padding: 30px 15px;
        }
        .logoImg {
            position: absolute;
            top: 35%;
            width: 25vw;
            left: 17%;
        }
        .headerHeading {
            position: absolute;
            top: 38%;
            right: 15%;
            font-size: 4vw;
            margin: 0px;
            color: white;
        }
        .scrollCircle {
            border: 2px solid white;
            border-radius: 200px;
            position: absolute;
            bottom: 10px;
            right: 20px;
            padding: 25px;
            color: white;
            font-weight: bold;
            font-size: 1.1vw;
            text-align: center;
            line-height: 1.4;
            cursor: pointer;
            transition: 0.2s;
            animation-name: bounce;
            animation-duration: 0.8s;
            animation-iteration-count: infinite;
        }
        .scrollCircle:hover {
            background-color: white;
            color: black;
        }
        .randomPhotosSection {
            background-color: black;
            padding: 15vh 0;
            border-bottom: 2px solid white;
        }
        .randomImagesThingy {
            display: flex;
        }
        .randomImagesThingy img {
            width: 25vw;
        }
        .ourTeam {
            display: flex;
            width: 1000px;
            gap: 30px;
            margin: auto;
            margin-top: 15vh;
        }
        .column {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            gap: 30px;
        }
        .smallCard, .normalCard, .largeCard {
            width: 220px; 
            background-color: #666;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 20px;
            position: relative;
            flex-direction: column;
            font-size: 20px;
            text-align: center;
            background-size: cover;
        }
        .column p {
            margin: 5px 0;
            font-size: 17px;
            z-index: 1;
        }
        .column b {z-index: 1;}
        .cardImg {
            width: 50px;
            height: 50px;
            position: absolute;
            left: 85px;
            top: -25px;
            background-color: transparent;
            padding: 8px;
            background-color: #888;
            border: 2px solid white;
            border-radius: 50px;
        }
        .smallCard {
            min-height: 120px;
        }
        .normalCard {
            min-height: 200px;
        }
        .largeCard {
            min-height: 280px;
        }
        .cardOverlay {
            position: absolute;
            width: 100%;
            height: 100%;
            border-radius: 20px;
            background-color: rgba(0, 0, 0, 0.65);
            z-index: 0;
        }
        .loadingScreen {
            z-index: 200;
            background-color: #000;
            color: white;
            font-size: Courier;
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .loadingBarOut {
            width: 80vw;
            border: 2px solid white;
            height: 30px;
            display: flex;
            align-items: center;
        }
        .loadingBarIn {
            width: 0%;
            background-color: white;
            height: 16px;
            margin: 0px 5px;
        }

        @keyframes bounce {
            50% {transform: translateY(-20px)}
            100% {transform: translateY(0px)}
        }
    </style>
</head>
<body>
    <div class="loadingScreen" id="loadingScreen">
        <h1>Loading... <span id=loadedPercentage>0</span>%</h1>
        <div class="loadingBarOut">
            <div class="loadingBarIn" id="loadingBar"></div>
        </div>
    </div>
    <div class="header">
        <video class="bgvid" autoplay muted loop id="bgLoop">
            <source src="bgVideo.mp4">
        </video>
        <div class="bgOverlay" id="bgOverlay"></div>
        <div class="nav">
            <div class="logoText">Stock Surgeons</div>
            <div class="navItems">
                <div class="navItem">Home</div>
                <div class="navItem">Services</div>
                <div class="navItem">Game</div>
                <div class="navItem">About Us</div>
            </div>
            <div class="logoText" style="visibility: hidden;">Stock Surgeons</div>
        </div>
        <img class="logoImg" src="stockLogo.webp">
        <h1 class="headerHeading">Precision.<br>Expertise.<br>Growth.</h1>
        <div class="scrollCircle">Scroll<br>&darr;</div>
    </div>
    <div class="randomPhotosSection">
        <div class="randomImagesThingy" id="marqueeImgs" style="position: absolute; left: 0px;">
            <img src="stockOne.jpg">
            <img src="stockTwo.jpg">
            <img src="stockThree.jpg">
            <img src="stockFour.jpg">
            <img src="stockOne.jpg">
            <img src="stockTwo.jpg">
            <img src="stockThree.jpg">
            <img src="stockFour.jpg">
        </div>
        <div class="randomImagesThingy" style="visibility: hidden;">
            <img src="stockOne.jpg">
            <img src="stockTwo.jpg">
            <img src="stockThree.jpg">
            <img src="stockFour.jpg">
            <img src="stockOne.jpg">
            <img src="stockTwo.jpg">
            <img src="stockThree.jpg">
            <img src="stockFour.jpg">
        </div>
    </div>
    <div class="ourTeam" id="ourTeam">
        <div class="column">
            <div class="smallCard" style="background-color: #ddd;">
                Our Team
                <img src="ourTeamLogo.svg" class="cardImg">
            </div>
            <div class="largeCard" style="background-image: url('/financeImage.jpg'); color: white;">
                <div class=cardOverlay></div>
                <b>Ishita Madaan</b>
                <p>Financial Equity & Data Suture Surgeon</p>
            </div>
        </div>
        <div class="column">
            <div class="normalCard" style="background-image: url('/stocksImageOne.webp'); color: white;">
                <div class="cardOverlay"></div>
                <b>Ananya Goswami</b>
                <p>Chief Surgeon of Investments</p>
            </div>
            <div class="normalCard" style="background-image: url('/humanBrain.jpg'); color: white;">
                <b>Gauri Mishra</b>
                <p>Scalpel Portfolio Manager</p>
            </div>
        </div>
        <div class="column">
            <div class="normalCard" style="background-image: url('stocksImageTwo.jpg'); color: white;">
                <div class="cardOverlay"></div>
                <b>Aarav Mahajan</b>
                <p>Investment Strategist & Operation Planner</p>
            </div>
            <div class="normalCard" style="background-color: rgb(170, 2, 255); color: white;">
                <b>Manaswi Panwar</b>
                <p>Risk Management Surgeon</p>
            </div>
        </div>
        <div class="column">
            <div class="smallCard" style="background-color: rgb(250, 6, 68); color: white; min-height: 150px;">
                <b>Aanya Ahuja</b>
                <p>Quantitative Mastery Surgeon</p>
            </div>
            <div class="largeCard" style="min-height: 250px; background-color: rgb(104, 104, 104); color: white;">
                <b>Praneel Pathak</b>
                <p>Algorithmic Precision Specialist</p>
            </div>
        </div>
    </div>
    <script>
        const marquee = document.getElementById('marqueeImgs')
        var loadedPercent = 0
        marqueeRect = marquee.getBoundingClientRect()
        const myInterval = setInterval(() => {
            marqueeStyleLeft = Number(marquee.style.left.slice(0, -2))
            if (marqueeStyleLeft <= -(document.body.offsetWidth)) {
                marquee.style.left = '0px'
                marqueeStyleLeft = 0
            }
            console.log(document.body.offsetWidth)
            marquee.style.left = (marqueeStyleLeft - 1) + 'px'
        }, 5)
        const loadInterval = setInterval(() => {
            const loadingBar = document.getElementById('loadingBar')
            loadingBar.style.width = `${loadedPercent}%`
            document.getElementById('loadedPercentage').innerHTML = loadedPercent
            if (document.readyState == 'complete') {
                console.log('done')
                document.getElementById('loadingScreen').style.display = 'none'
                clearInterval(loadInterval)
            } else if (loadedPercent == 99) {
                console.log('wait!')
            } else {
                loadedPercent += 1
            }
        }, 40)
        window.onload = () => {
            document.getElementById('bgOverlay').style.height = document.getElementById('bgLoop').getBoundingClientRect().height + 'px'
        }
    </script>
</body>
</html>